<mujoco model="shadow_hand">
    <compiler angle="radian"/>

    <!-- The first two joints (0 and 1) of the first, middle, ring and little fingers
        are underactuated, or "coupled".
        We define a tendon for each J0-J1 pair and 1 actuator will drive each such
        tendon. The length of the tendon is abstract, and its "length" will be the
        combined angles of J0 and J1.
     -->
    <tendon>
        <fixed name="FFT0">
            <joint joint="FFJ1" coef="1"/>
            <joint joint="FFJ0" coef="1"/>
        </fixed>
        <fixed name="MFT0">
            <joint joint="MFJ1" coef="1"/>
            <joint joint="MFJ0" coef="1"/>
        </fixed>
        <fixed name="RFT0">
            <joint joint="RFJ1" coef="1"/>
            <joint joint="RFJ0" coef="1"/>
        </fixed>
        <fixed name="LFT0">
            <joint joint="LFJ1" coef="1"/>
            <joint joint="LFJ0" coef="1"/>
        </fixed>
    </tendon>

    <actuator>
        <motor name="A_WRJ1" joint="WRJ1" ctrllimited="false" ctrlrange="-0.523599 0.174533"/>
        <motor name="A_WRJ0" joint="WRJ0" ctrllimited="false" ctrlrange="-0.698132 0.488692"/>
        <motor name="A_FFJ3" joint="FFJ3" ctrllimited="false" ctrlrange="-0.349066 0.349066"/>
        <motor name="A_FFJ2" joint="FFJ2" ctrllimited="false" ctrlrange="0 1.5708"/>
        <motor name="A_FFJ1" tendon="FFT0" ctrllimited="false" ctrlrange="0 3.1416"/>
        <motor name="A_MFJ3" joint="MFJ3" ctrllimited="false" ctrlrange="-0.349066 0.349066"/>
        <motor name="A_MFJ2" joint="MFJ2" ctrllimited="false" ctrlrange="0 1.5708"/>
        <motor name="A_MFJ1" tendon="MFT0" ctrllimited="false" ctrlrange="0 3.1416"/>
        <motor name="A_RFJ3" joint="RFJ3" ctrllimited="false" ctrlrange="-0.349066 0.349066"/>
        <motor name="A_RFJ2" joint="RFJ2" ctrllimited="false" ctrlrange="0 1.5708"/>
        <motor name="A_RFJ1" tendon="RFT0" ctrllimited="false" ctrlrange="0 3.1416"/>
        <motor name="A_LFJ4" joint="LFJ4" ctrllimited="false" ctrlrange="0 0.785398"/>
        <motor name="A_LFJ3" joint="LFJ3" ctrllimited="false" ctrlrange="-0.349066 0.349066"/>
        <motor name="A_LFJ2" joint="LFJ2" ctrllimited="false" ctrlrange="0 1.5708"/>
        <motor name="A_LFJ1" tendon="LFT0" ctrllimited="false" ctrlrange="0 3.1416"/>
        <motor name="A_THJ4" joint="THJ4" ctrllimited="false" ctrlrange="-1.0472 1.0472"/>
        <motor name="A_THJ3" joint="THJ3" ctrllimited="false" ctrlrange="0 1.22173"/>
        <motor name="A_THJ2" joint="THJ2" ctrllimited="false" ctrlrange="-0.20944 0.20944"/>
        <motor name="A_THJ1" joint="THJ1" ctrllimited="false" ctrlrange="-0.698132 0.698132"/>
        <motor name="A_THJ0" joint="THJ0" ctrllimited="false" ctrlrange="0 1.5708"/>
    </actuator>
</mujoco>

<mujoco model="arena">
    <!-- <compiler coordinate="local" angle="radian" eulerseq="xyz" boundmass="1e-5" boundinertia="1e-11"/> -->

    <!-- <option cone="elliptic" noslip_iterations="5" noslip_tolerance="0" timestep="0.002"/> -->

    <visual>
        <map znear="0.01"/>
        <!-- <headlight diffuse=".3 .3 .3" ambient=".1 .1 .1" specular="0 0 0"/> -->
        <!-- <scale forcewidth="0.01" contactwidth="0.06" contactheight="0.01" jointwidth="0.01" framewidth="0.01" framelength=".3"/> -->
    </visual>

    <asset>
        <texture type="skybox" builtin="gradient" rgb1=".4 .6 .8" rgb2="0 0 0" width="100" height="100"/>
        <texture name="groundplane" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 .2 .3" width="300" height="300" mark="edge" markrgb=".8 .8 .8"/>
        <material name="groundplane" texture="groundplane" texrepeat="5 5" texuniform="true" reflectance=".2"/>
    </asset>

    <!-- Always initialize the free camera to point at the origin. -->
    <statistic center="0 0 0"/>

    <worldbody>
        <camera name="cam0" pos="0 -1.0 0.6" xyaxes="1 0 0 0 1 2"/>
        <camera name="cam1" pos="0 -0.25 0.35" xyaxes="1 0 0 0 0 1"/>
        <camera name="fixed_viewer" pos="0 -1.0 0.6" xyaxes="1 0 0 0 1 2"/>
        <camera name="closeup" pos="0 -0.6 0.25" xyaxes="1 0 0 0 0.5 1"/>
        <geom name="ground" type="plane" size="2 2 2" material="groundplane" friction="0.4"/>
        <light directional="true" diffuse=".7 .7 .7" pos="0 0 1.5" dir="0 0 -1" specular=".3 .3 .3" castshadow="true"/>
    </worldbody>
</mujoco>
